generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  name         String?
  email        String          @unique
  passwordHash String?
  role         String          @default("presenter")
  sessions     Session[]
  createdAt    DateTime        @default(now())
}

model Session {
  id         String    @id @default(uuid())
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  title      String?
  code       String    @unique
  visibility String    @default("public")
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  endedAt    DateTime?
  feedback   Feedback[]
  questions Question[]

  @@index([userId])
}

model Feedback {
  id             String    @id @default(uuid())
  sessionId      String
  session        Session   @relation(fields: [sessionId], references: [id])
  type           String
  emoji          String?
  message        String?
  sentimentScore Float?
  createdAt      DateTime  @default(now())

  @@index([sessionId])
  @@index([createdAt])
}

model Question {
  id         String    @id @default(uuid())
  sessionId  String
  session    Session   @relation(fields: [sessionId], references: [id])
  type       String    // "text" | "mcq"
  title      String
  // For MCQ we store options as a string array
  options    String[]  @default([])
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  endedAt    DateTime?
  responses  Response[]

  @@index([sessionId])
}

model Response {
  id          String    @id @default(uuid())
  questionId  String
  question    Question  @relation(fields: [questionId], references: [id])
  // For MCQ responses we store selectedOption index or label
  selectedOpt  String?   // option label (e.g. "A" or "Choice text")
  textAnswer   String?   // for text responses
  sentimentScore Float?  // optional sentiment for text
  createdAt    DateTime  @default(now())

  @@index([questionId])
}

model ActivityLog {
  id         String   @id @default(uuid())
  sessionId  String
  activityType String // "feedback" | "response" | "presence_join" | "presence_leave"
  metadata   Json?   // Store any additional data (questionId, selectedOpt, emoji, etc.)
  createdAt  DateTime @default(now())

  @@index([sessionId])
  @@index([createdAt])
  @@index([activityType])
}
